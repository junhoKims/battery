{
  "name": "@junhokims/react",
  "version": "0.0.1",
  "description": "React Components, Hooks",
  "author": {
    "name": "junhoKims",
    "email": "kraksin12@gmail.com"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "esm"
  ],
  "main": "src/index.ts",
  "exports": {
    ".": {
      "require": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "rm -rf dist esm && tsc -p tsconfig.build.json && rollup -c rollup.config.js",
    "test": "jest -c jest.config.js",
    "test:silent": "jest -c jest.config.js --silent",
    "typecheck": "tsc --noEmit"
  },
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "require": "./dist/index.js",
        "import": "./esm/index.mjs",
        "types": "./dist/index.d.ts"
      },
      "./package.json": "./package.json"
    },
    "import": "./esm/index.mjs",
    "main": "./dist/index.js",
    "module": "./esm/index.mjs",
    "types": "./dist/index.d.ts"
  },
  "devDependencies": {
    "@junhokims/jest-config": "workspace:^",
    "@junhokims/rollup-config": "workspace:^",
    "@junhokims/utils": "workspace:^",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18",
    "jest": "^29.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^4.5.0",
    "typescript": "^5.3.2"
  },
  "peerDependencies": {
    "react": "^17 || ^18"
  }
}
